procedure Tbutton12.Button14Click(Sender: TObject);
var
  S: String;
  D: Double;
begin
  S := '25,5';
  D := StrToFloat(S);  //Teraz w D jest liczba 25.5
  ShowMessage(FloatToStr(D));
end;
procedure Tbutton12.Button15Click(Sender: TObject);
